rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les challenges quotidiens
    match /challenges/{date}/{filename} {
      // Permettre l'upload uniquement aux utilisateurs authentifiés
      allow write: if request.auth != null 
                   && request.resource.size < 100 * 1024 * 1024 // Max 100MB
                   && request.resource.contentType.matches('video/.*');
      
      // Permettre la lecture aux utilisateurs authentifiés et admins
      allow read: if request.auth != null;
    }

    // Règles pour les avatars (futur)
    match /avatars/{userId}/{filename} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      
      allow read: if request.auth != null;
    }
  }
}
