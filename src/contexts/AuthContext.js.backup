import React, { createContext, useContext, useState, useEffect } from 'react';
import auth from '@react-native-firebase/auth';
import firestore from '@react-native-firebase/firestore';
import AsyncStorage from '@react-native-async-storage/async-storage';
import { initPersistence, waitForFirebase } from '../config/firebase';

export const AuthContext = createContext();

// ðŸš€ Optimisations pour APK Production
const IS_DEV = __DEV__;
const log = (...args) => IS_DEV && console.log(...args);
const logError = (...args) => console.error(...args);

// Batch AsyncStorage operations
const batchAsyncStorage = {
  async setMultiple(items) {
    return AsyncStorage.multiSet(items);
  },
  async removeMultiple(keys) {
    return AsyncStorage.multiRemove(keys);
  }
};

// CrÃ©er document Firestore de maniÃ¨re non-bloquante
const createUserDocumentAsync = async (userId, email) => {
  try {
    // Initialiser la persistence si pas dÃ©jÃ  fait
    initPersistence();
    
    await firestore()
      .collection('users')
      .doc(userId)
      .set({
        email,
        totalXP: 0,
        level: 1,
        completedPrograms: [],
        userProgress: {},
        streak: 0,
        lastWorkoutDate: null,
        createdAt: firestore().FieldValue.serverTimestamp(),
      });
    log('âœ… Document utilisateur crÃ©Ã©');
  } catch (error) {
    logError('âš ï¸ Erreur crÃ©ation document:', error.code);
    // Le document sera crÃ©Ã© au prochain login si Ã©chec
  }
};

// VÃ©rifier et crÃ©er le document si absent
const ensureUserDocument = async (userId, email) => {
  try {
    const doc = await firestore()
      .collection('users')
      .doc(userId)
      .get();
    
    if (!doc.exists) {
      log('ðŸ“ Document utilisateur absent, crÃ©ation...');
      await createUserDocumentAsync(userId, email);
    }
  } catch (error) {
    logError('âš ï¸ Erreur vÃ©rification document:', error.code);
  }
};

export const AuthProvider = ({ children }) => {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(true);
  const [isGuest, setIsGuest] = useState(false);
  const [guestData, setGuestData] = useState(null);
  const [initializing, setInitializing] = useState(true);

  useEffect(() => {
    log('ðŸ”„ Initialisation Firebase Auth');
    
    let unsubscribe = () => {};
    let mounted = true;
    
    // Attendre que Firebase soit prÃªt avant de s'abonner
    const initAuth = async () => {
      try {
        // Attendre que Firebase soit complÃ¨tement initialisÃ©
        log('â³ Attente initialisation Firebase...');
        const isReady = await waitForFirebase();
        
        if (!isReady) {
          throw new Error('Firebase initialization timeout');
        }
        
        if (!mounted) return;
        
        log('âœ… Firebase Auth prÃªt, abonnement au listener');
        
        // Auth State Listener
        unsubscribe = auth().onAuthStateChanged(async (firebaseUser) => {
          if (!mounted) return;
          
          if (firebaseUser) {
            log('âœ… Utilisateur connectÃ©:', firebaseUser.email);
            setUser(firebaseUser);
            setIsGuest(false);
            
            // VÃ©rifier que le document Firestore existe
            ensureUserDocument(firebaseUser.uid, firebaseUser.email);
          } else {
            log('â„¹ï¸ Aucun utilisateur connectÃ©');
            setUser(null);
          }
          
          if (initializing) {
            setInitializing(false);
            setLoading(false);
          }
        });
      } catch (error) {
        logError('âŒ Erreur initialisation Auth:', error);
        // Continuer quand mÃªme en mode dÃ©gradÃ©
        if (mounted) {
          setInitializing(false);
          setLoading(false);
        }
      }
    };
    
    initAuth();

    // Charger le mode guest au dÃ©marrage
    const loadGuestMode = async () => {
      try {
        const [[, guestMode], [, savedGuestData]] = await AsyncStorage.multiGet([
          '@fitnessrpg:guest_mode',
          '@fitnessrpg:guest_data'
        ]);
        
        if (guestMode === 'true') {
          log('ðŸ‘¤ Mode invitÃ© actif');
          setIsGuest(true);
          if (savedGuestData) {
            setGuestData(JSON.parse(savedGuestData));
          }
        }
      } catch (error) {
        logError('âŒ Erreur chargement guest mode:', error);
      }
    };
    
    loadGuestMode();

    return () => {
      mounted = false;
      unsubscribe();
    };
  }, []);

  const signup = async (email, password) => {
    try {
      log('ðŸ“ Inscription:', email);
      
      // Validation
      if (!email || !password) {
        return { 
          success: false, 
          error: 'Email et mot de passe requis',
          code: 'validation/missing-fields'
        };
      }
      
      // Ã‰tape 1: D'abord nettoyer le mode invitÃ©
      await batchAsyncStorage.removeMultiple([
        '@fitnessrpg:guest_mode',
        '@fitnessrpg:guest_data'
      ]);
      
      // Ã‰tape 2: Mettre Ã  jour l'Ã©tat local IMMÃ‰DIATEMENT
      setIsGuest(false);
      setGuestData(null);
      
      // Ã‰tape 3: Signup Firebase en parallÃ¨le avec AsyncStorage
      const [userCredential] = await Promise.all([
        auth().createUserWithEmailAndPassword(email, password),
        batchAsyncStorage.setMultiple([
          ['@fitnessrpg:onboarding_completed', 'true']
        ])
      ]);
      
      const newUser = userCredential.user;
      
      // CrÃ©er le document Firestore (non-bloquant)
      createUserDocumentAsync(newUser.uid, newUser.email);
      
      log('âœ… Inscription rÃ©ussie');
      
      return { success: true, user: newUser };
      
    } catch (error) {
      logError('âŒ Erreur inscription:', error);
      
      const errorMap = {
        'auth/email-already-in-use': 'Cet email est dÃ©jÃ  utilisÃ©',
        'auth/invalid-email': 'Email invalide',
        'auth/weak-password': 'Mot de passe trop faible (min. 6 caractÃ¨res)',
        'auth/network-request-failed': 'Erreur rÃ©seau. VÃ©rifiez votre connexion.',
        'auth/too-many-requests': 'Trop de tentatives. RÃ©essayez plus tard.',
      };
      
      return { 
        success: false, 
        error: errorMap[error.code] || 'Erreur lors de l\'inscription',
        code: error.code 
      };
    }
  };

  const login = async (email, password) => {
    try {
      log('ðŸ”„ Connexion:', email);
      
      // Validation
      if (!email || !password) {
        return { 
          success: false, 
          error: 'Email et mot de passe requis',
          code: 'validation/missing-fields'
        };
      }
      
      // Ã‰tape 1: D'abord nettoyer le mode invitÃ©
      await batchAsyncStorage.removeMultiple([
        '@fitnessrpg:guest_mode',
        '@fitnessrpg:guest_data'
      ]);
      
      // Ã‰tape 2: Mettre Ã  jour l'Ã©tat local IMMÃ‰DIATEMENT
      setIsGuest(false);
      setGuestData(null);
      
      // Ã‰tape 3: Login Firebase en parallÃ¨le avec AsyncStorage
      const [userCredential] = await Promise.all([
        auth().signInWithEmailAndPassword(email, password),
        batchAsyncStorage.setMultiple([
          ['@fitnessrpg:onboarding_completed', 'true']
        ])
      ]);
      
      const loggedUser = userCredential.user;
      
      // VÃ©rifier le document Firestore (non-bloquant)
      ensureUserDocument(loggedUser.uid, loggedUser.email);
      
      log('âœ… Connexion rÃ©ussie');
      
      return { success: true, user: loggedUser };
      
    } catch (error) {
      logError('âŒ Erreur connexion:', error);
      
      const errorMap = {
        'auth/user-not-found': 'Aucun compte avec cet email',
        'auth/wrong-password': 'Mot de passe incorrect',
        'auth/invalid-email': 'Email invalide',
        'auth/user-disabled': 'Ce compte a Ã©tÃ© dÃ©sactivÃ©',
        'auth/network-request-failed': 'Erreur rÃ©seau. VÃ©rifiez votre connexion.',
        'auth/too-many-requests': 'Trop de tentatives. RÃ©essayez plus tard.',
        'auth/invalid-credential': 'Identifiants invalides',
      };
      
      return { 
        success: false, 
        error: errorMap[error.code] || 'Erreur lors de la connexion',
        code: error.code 
      };
    }
  };

  const logout = async () => {
    try {
      setLoading(true);
      log('ðŸ”„ DÃ©connexion...');
      
      const promises = [
        batchAsyncStorage.removeMultiple([
          '@fitnessrpg:onboarding_completed',
          '@fitnessrpg:guest_mode',
          '@fitnessrpg:guest_data',
          '@fitnessrpg:guest_programs',
          '@fitnessrpg:tree_tooltip_shown'
        ])
      ];
      
      if (user) {
        promises.push(auth().signOut());
      }
      
      await Promise.all(promises);
      
      // Reset Ã©tats
      setUser(null);
      setIsGuest(false);
      setGuestData(null);
      
      log('âœ… DÃ©connexion rÃ©ussie');
      
      return { success: true };
    } catch (error) {
      logError('âŒ Erreur dÃ©connexion:', error);
      return { success: false, error: error.message };
    } finally {
      setLoading(false);
    }
  };

  const resetUserData = async () => {
    try {
      log('ðŸ”„ RÃ©initialisation donnÃ©es utilisateur...');
      
      const promises = [
        batchAsyncStorage.removeMultiple([
          '@fitnessrpg:tree_tooltip_shown',
          '@fitnessrpg:onboarding_completed',
          '@fitnessrpg:guest_mode',
          '@fitnessrpg:guest_data',
          '@fitnessrpg:guest_programs'
        ])
      ];
      
      // Supprimer le document Firestore si utilisateur Firebase
      if (user && !isGuest) {
        promises.push(
          firestore()
            .collection('users')
            .doc(user.uid)
            .delete()
        );
      }
      
      await Promise.all(promises);
      
      log('âœ… DonnÃ©es rÃ©initialisÃ©es');
      
      return { success: true };
    } catch (error) {
      logError('âŒ Erreur reset:', error);
      return { success: false, error: error.message };
    }
  };

  const setGuestMode = async () => {
    try {
      log('ðŸ‘¤ Activation mode invitÃ©');
      setIsGuest(true);
      await AsyncStorage.setItem('@fitnessrpg:guest_mode', 'true');
      return { success: true };
    } catch (error) {
      logError('âŒ Erreur mode invitÃ©:', error);
      return { success: false, error: error.message };
    }
  };

  const saveGuestData = async (data) => {
    try {
      setGuestData(data);
      await AsyncStorage.setItem('@fitnessrpg:guest_data', JSON.stringify(data));
      return { success: true };
    } catch (error) {
      logError('âŒ Erreur sauvegarde guest:', error);
      return { success: false, error: error.message };
    }
  };

  const convertGuestToUser = async (email, password) => {
    try {
      log('ðŸ”„ Conversion invitÃ© â†’ utilisateur:', email);
      
      // Validation
      if (!email || !password) {
        return { 
          success: false, 
          error: 'Email et mot de passe requis',
          code: 'validation/missing-fields'
        };
      }
      
      // CrÃ©er le compte en parallÃ¨le avec AsyncStorage
      const [userCredential] = await Promise.all([
        auth().createUserWithEmailAndPassword(email, password),
        AsyncStorage.setItem('@fitnessrpg:onboarding_completed', 'true')
      ]);
      
      const newUser = userCredential.user;
      
      // Migrer les donnÃ©es du guest (non-bloquant)
      const guestDataToMigrate = guestData || {};
      firestore()
        .collection('users')
        .doc(newUser.uid)
        .set({
          email: newUser.email,
          totalXP: 0,
          level: 1,
          completedPrograms: [],
          userProgress: {},
          streak: 0,
          lastWorkoutDate: null,
          createdAt: firestore().FieldValue.serverTimestamp(),
          ...guestDataToMigrate,
        })
        .catch((error) => {
          logError('âš ï¸ Migration sera complÃ©tÃ©e plus tard:', error.code);
        });
      
      // Nettoyer le guest mode
      await batchAsyncStorage.removeMultiple([
        '@fitnessrpg:guest_mode',
        '@fitnessrpg:guest_data'
      ]);
      
      setIsGuest(false);
      setGuestData(null);
      
      log('âœ… Conversion rÃ©ussie');
      
      return { success: true, user: newUser };
      
    } catch (error) {
      logError('âŒ Erreur conversion:', error);
      
      const errorMap = {
        'auth/email-already-in-use': 'Cet email est dÃ©jÃ  utilisÃ©',
        'auth/invalid-email': 'Email invalide',
        'auth/weak-password': 'Mot de passe trop faible (min. 6 caractÃ¨res)',
        'auth/network-request-failed': 'Erreur rÃ©seau. VÃ©rifiez votre connexion.',
      };
      
      return { 
        success: false, 
        error: errorMap[error.code] || 'Erreur lors de la crÃ©ation du compte',
        code: error.code 
      };
    }
  };

  // MÃ©thode pour rÃ©essayer la crÃ©ation du document si Ã©chec initial
  const retryCreateUserDocument = async () => {
    if (user && !isGuest) {
      await ensureUserDocument(user.uid, user.email);
    }
  };

  return (
    <AuthContext.Provider value={{ 
      user, 
      loading: loading || initializing, 
      isGuest,
      guestData,
      signup, 
      login, 
      logout, 
      resetUserData,
      setGuestMode,
      saveGuestData,
      convertGuestToUser,
      retryCreateUserDocument
    }}>
      {children}
    </AuthContext.Provider>
  );
};

export const useAuth = () => {
  const context = useContext(AuthContext);
  if (!context) {
    throw new Error('useAuth must be used within an AuthProvider');
  }
  return context;
};